<p id="notice"><%= notice %></p>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.content %></td>
      <td><%= link_to article.user.username, user_path(article.user) if article.user %></td>
      <td><%= link_to 'View Article', article %></td>
      <td><%= link_to 'Edit Article', edit_article_path(article) %></td>
      <td><%= link_to 'Delete Article', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
